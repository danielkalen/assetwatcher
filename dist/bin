#!/usr/bin/env node
// Generated by CoffeeScript 1.10.0
var args, chalk, options, yargs;

chalk = require('chalk');

yargs = require('yargs');

yargs.usage((chalk.bgYellow.black('Usage')) + " simplywatch -d <directory globs> -s <globs to skip> -i").options(require('./cliOptions')).help('h').version().wrap(yargs.terminalWidth());

args = yargs.argv;

options = {
  'globs': args.g || args.glob || args._ || [],
  'ignoreGlobs': args.i || args.ignore || [],
  'command': args.x || args.execute,
  'processImports': args.p || args.processImports,
  'finalCommand': args.f || args["finally"],
  'execDelay': args.d || args.delay,
  'finalCommandDelay': args.D || args.finallyDelay,
  'trim': parseFloat(args.t || args.trim),
  'silent': args.s || args.silent
};

if (args.h || args.help) {
  process.stdout.write(yargs.help());
  process.exit(0);
} else {
  require('./simplywatch')(options);
}
