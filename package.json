{
  "name": "simplywatch",
  "version": "2.1.4",
  "description": "Watches files and upon change executes a command for each file INDIVIDUALLY with file-related params",
  "keywords": [
    "asset-watch",
    "assetwatch",
    "assetwatcher",
    "asset-pipeline",
    "pipeline",
    "js-watch",
    "jswatch",
    "jswatcher",
    "sass-watch",
    "sasswatch",
    "sasswatcher",
    "node-sass",
    "libsass",
    "sass",
    "scss",
    "foreach",
    "each",
    "watch"
  ],
  "main": "index.js",
  "bin": {
    "simplywatch": "./bin"
  },
  "author": "danielkalen",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielkalen/simplywatch"
  },
  "license": "MIT",
  "mocha_opts": "-u tdd --compilers coffee:coffee-script/register --slow 3000 --timeout 10000 -R spec",
  "scripts": {
    "makeexec": "chmod +x ./bin",
    "coverage": "istanbul cover --dir test/coverage/node node_modules/mocha/bin/_mocha -- $npm_package_mocha_opts && npm run coverage:badge",
    "coverage:badge": "coffee .config/badge-gen.coffee",
    "test": "mocha $npm_package_mocha_opts"
  },
  "dependencies": {
    "@danielkalen/listr": "^0.5.0",
    "abs": "^1.3.4",
    "bluebird": "^3.4.3",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "daemon-plus": "^1.1.1",
    "extend": "^3.0.0",
    "glob": "^7.0.3",
    "micromatch": "^2.3.11",
    "simplyimport": "^2.1.6",
    "window-size": "^0.2.0",
    "yargs": "^3.29.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "coffee-script": "^1.10.0",
    "create-output-stream": "0.0.1",
    "execa": "^0.4.0",
    "foreach-cli": "^1.6.0",
    "fs-extra": "^0.30.0",
    "intercept-stdout": "^0.1.2",
    "istanbul": "^0.4.5",
    "lcov-parse": "0.0.10",
    "mocha": "^3.0.2",
    "nodejs-dashboard": "^0.1.1",
    "nodemon": "^1.8.1",
    "request": "^2.74.0",
    "svg2png": "^3.0.1"
  },
  "peerDependencies": {
    "fsevents": "^1.0.15"
  }
}
