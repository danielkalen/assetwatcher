{
  "name": "simplywatch",
  "version": "2.0.0",
  "description": "Smarter file change watcher supporting executing commands for files individually and ignoration of imported files.",
  "keywords": [
    "asset-watch",
    "assetwatch",
    "asset",
    "js-watch",
    "jswatch",
    "jswatcher",
    "sass-watch",
    "sasswatch",
    "sasswatcher",
    "node-sass",
    "libsass",
    "sass",
    "scss",
    "foreach",
    "each",
    "watch"
  ],
  "main": "dist/simplywatch.js",
  "bin": {
    "simplywatch": "./dist/bin"
  },
  "author": "danielkalen",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielkalen/simplywatch"
  },
  "license": "MIT",
  "mocha_opts": "-u tdd -b --compilers coffee:coffee-script/register --slow 3000 --timeout 10000 -R spec",
  "scripts": {
    "watch": "nodemon -e coffee -w ./src -x 'npm run build'",
    "build": "npm run compile && npm run prependbin && npm run makeexec",
    "compile": "npm run compile:module && npm run compile:bin",
    "compile:module": "foreach -g 'src/*' -x 'cat {{path}} | coffee -c -s -b > dist/{{name}}.js'",
    "compile:bin": "coffee -o ./dist -c -b src/cli.coffee",
    "prependbin": "echo '#!/usr/bin/env node' | cat - dist/cli.js > dist/bin && rm -rf dist/cli.js",
    "makeexec": "chmod +x dist/bin && chmod +x src/cli.coffee",
    "coverage": "istanbul cover --dir test/coverage/node node_modules/mocha/bin/_mocha -- $npm_package_mocha_opts && npm run coverage:badge",
    "coverage:badge:": "coffee .config/badge-gen.coffee",
    "test": "fromSrc=true mocha $npm_package_mocha_opts"
  },
  "dependencies": {
    "@danielkalen/listr": "^0.5.0",
    "abs": "^1.3.4",
    "bluebird": "^3.4.3",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "extend": "^3.0.0",
    "glob": "^7.0.3",
    "micromatch": "^2.3.11",
    "simplyimport": "^2.1.1",
    "window-size": "^0.2.0",
    "yargs": "^3.29.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "coffee-script": "^1.10.0",
    "create-output-stream": "0.0.1",
    "execa": "^0.4.0",
    "foreach-cli": "^1.6.0",
    "fs-extra": "^0.30.0",
    "istanbul": "^0.4.5",
    "lcov-parse": "0.0.10",
    "mocha": "^3.0.2",
    "nodemon": "^1.8.1",
    "request": "^2.74.0",
    "svg2png": "^3.0.1"
  }
}
